<nav class="navbar navbar-expand-lg navbar-light bg-light my-nav">
  <div class="container-fluid container">
    <a class="navbar-brand" href="/">
      <img class="web-logo" src="/images/logo.png" alt="logo" width="30" />
      Get a drink
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">

        <% navList.forEach(nav => { %>
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="navbarDropdown"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              <%= nav.name %>
            </a>
            <ul class="dropdown-menu scrollable-dropdown" aria-labelledby="navbarDropdown">
              <% nav.list.forEach((l, i) => { %>
                <li><a class="dropdown-item" href="/filter/<%= nav.name %>/<%= i %>">
                  <%= l %>
                </a></li>
              <% }) %>
            </ul>
          </li>
        <% }) %>
      </ul>
      <form class="d-flex" action="/search" id="mySearch" method="post">
        <input class="form-control me-2" type="text" placeholder="Search" id="name" name="name"/>
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>
  </div>
</nav>
