<div class="drink">
  <img src="<%= drink.thumb %>" alt="Cocktail" class="thumbnail" />
  <div class="info">
    <h2><%= drink.name %></h2>
    <p>Category: <%= drink.category %></p>
    <p><%= drink.Alcoholic %></p>
    <p>Glass: <%= drink.glass %></p>
    <h3>Ingredients</h3>
    <ul>
      <% drink.ingredients.forEach(({i, m}) => { %>
      <li><%= m ? m + " " : ""%><%= i %></li>
      <% }) %>
    </ul>
    <h3>Intructions</h3>
    <p><%= drink.instruction %></p>
  </div>
</div>
